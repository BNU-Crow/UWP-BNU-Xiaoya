<UserControl
    x:Class="Xiaoya.Controls.TimeTableItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Xiaoya.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Button HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Padding="8" BorderBrush="WhiteSmoke" BorderThickness="1" Click="Button_Click">
        <Button.Background>
            <SolidColorBrush Color="{ThemeResource SystemAccentColor}" Opacity="{x:Bind Opacity}"/>
        </Button.Background>
        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TextBlock Foreground="{ThemeResource AccentButtonForeground}" TextWrapping="Wrap" TextAlignment="Center" FontSize="16" Text="{x:Bind CourseName}"/>
            <TextBlock FontSize="14" TextAlignment="Center" Foreground="{ThemeResource AccentButtonForeground}" Margin="8" VerticalAlignment="Stretch" TextWrapping="Wrap" MaxLines="0" Text="{x:Bind Description}"/>
        </StackPanel>
    </Button>
</UserControl>
